{
  "manifest_version": 2,
  "name": "BTC.COM Chrome Extension",
  "description": "BTC.COM Chrome Extension",
  "author": "BTC.COM",
  "version": "1.1.0",

  "browser_action": {
    "default_popup": "components/popup/popup.html"
  },

  "permissions": [
    "storage",
    "alarms",

    "*://*/"
  ],

  "background": {
    "scripts": [ "build/background.bundle.js" ],
    "persistent": false
  },

  "options_page": "components/option/option.html"
}